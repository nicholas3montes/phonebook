    </tr>
    <tr>
      <td><%= form.label :Telefone %><%= form.text_field :phone %></td>
    </tr>
    <tr>
      <td><%= form.label :Data_de_Nascimento %><%= form.date_field :birthdate %></td>
    </tr>

    <%= form.fields_for :address do |address_form| %>
      <tr>
        <td><%= address_form.label :Cidade %><%= address_form.text_field :city %></td>
      </tr>
      <tr>
        <td><%= address_form.label :Rua %><%= address_form.text_field :street %></td>
      </tr>
